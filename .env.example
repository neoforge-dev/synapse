# Environment variables for GraphRAG MCP

# Application
# DEBUG=True

# Memgraph Connection
MEMGRAPH_HOST=memgraph
MEMGRAPH_PORT=7687
# Optional URI Override (e.g., bolt+ssc://...) 
# MEMGRAPH_URI=
# Optional Auth
# MEMGRAPH_USERNAME=memgraph
# MEMGRAPH_PASSWORD=secret
# Optional Pool/Retry Config
# MEMGRAPH_MAX_POOL_SIZE=50
# MEMGRAPH_CONNECTION_TIMEOUT=10
# MEMGRAPH_RETRY_ATTEMPTS=3
# MEMGRAPH_RETRY_WAIT_SECONDS=1

# Embedding Model (Optional - defaults to all-MiniLM-L6-v2)
# EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2

# Search Settings (Optional)
# VECTOR_SEARCH_SIMILARITY_THRESHOLD=0.75

# Search Performance Optimization
# Enable/disable search result caching (true/false)
SYNAPSE_ENABLE_SEARCH_CACHE=true
# Maximum number of cached search results
SYNAPSE_SEARCH_CACHE_SIZE=100
# Cache time-to-live in seconds (5 minutes default)
SYNAPSE_SEARCH_CACHE_TTL=300 

# --- Synapse Configuration Example --- 
# Copy this file to .env and modify values as needed.
# Environment variables take precedence over values in this file.

# --- API Server Settings --- 
# Host for the FastAPI server
SYNAPSE_API_HOST=0.0.0.0

# Port for the FastAPI server
SYNAPSE_API_PORT=8000

# Logging level for the API (e.g., DEBUG, INFO, WARNING, ERROR)
SYNAPSE_API_LOG_LEVEL=INFO

# --- Memgraph Connection Settings --- 
# Hostname or IP of the Memgraph instance
SYNAPSE_MEMGRAPH_HOST=127.0.0.1

# Port for Memgraph Bolt connection
SYNAPSE_MEMGRAPH_PORT=7687

# Username for Memgraph (if authentication is enabled)
# SYNAPSE_MEMGRAPH_USER=

# Password for Memgraph (if authentication is enabled)
# SYNAPSE_MEMGRAPH_PASSWORD=

# Use SSL for Memgraph connection (true/false)
SYNAPSE_MEMGRAPH_USE_SSL=false

# Max connection/query retries
# SYNAPSE_MEMGRAPH_MAX_RETRIES=3

# Delay between retries (seconds)
# SYNAPSE_MEMGRAPH_RETRY_DELAY=2

# --- Vector Store Settings (Placeholders) --- 
# Type of vector store ('mock', 'qdrant', etc.)
# SYNAPSE_VECTOR_STORE_TYPE=mock
# Host for the vector store service
# SYNAPSE_VECTOR_STORE_HOST=
# Port for the vector store service
# SYNAPSE_VECTOR_STORE_PORT=
# API Key for the vector store service (if required)
# SYNAPSE_VECTOR_STORE_API_KEY=

# --- NLP Model Settings (Placeholders) --- 
# Identifier for the entity extraction model ('mock', spacy model name, etc.)
# SYNAPSE_ENTITY_EXTRACTOR_MODEL=mock
# Identifier for the text embedding model ('mock', sentence-transformer model name, etc.)
# SYNAPSE_EMBEDDING_MODEL=mock

# --- Document Processing Settings ---
# Type of chunk splitter ('sentence', 'token', etc.)
# SYNAPSE_CHUNK_SPLITTER_TYPE=sentence

# --- PostHog Analytics ---
SYNAPSE_POSTHOG_API_KEY=
SYNAPSE_POSTHOG_HOST=https://eu.posthog.com

# --- Stripe Billing ---
SYNAPSE_STRIPE_SECRET_KEY=sk_test_change_me
SYNAPSE_STRIPE_PUBLISHABLE_KEY=pk_test_change_me
SYNAPSE_STRIPE_WEBHOOK_SECRET=
SYNAPSE_STRIPE_MOCK=true